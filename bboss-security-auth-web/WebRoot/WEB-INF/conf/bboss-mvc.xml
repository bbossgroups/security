    <property name="localeResolver" class="org.frameworkset.web.servlet.i18n.CookieLocaleResolver"
     f:cookielocalkey="cookie.localkey"   f:defaultLanguage="zh_CN"
     />
     

     <property name="multipartResolver"   f:encoding="UTF-8"
